            android:background="#EF4135">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/player_grid"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:alpha="100"
        android:layout_above="@id/button_container">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/player_pos1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/player"
            android:background="#0055A4">
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/player_pos2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/player"
            android:background="#ffffff">
        </androidx.appcompat.widget.AppCompatImageView>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_player_pos3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/player"
            android:background="#EF4135">
        </androidx.appcompat.widget.AppCompatImageView>
    </androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_move_left"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#898787"
        android:src="@drawable/img_arrow_left2"
        android:scaleType="fitXY">
    </androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_pause"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/img_mustach"
        android:scaleType="fitXY">
    </androidx.appcompat.widget.AppCompatImageView>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_move_right"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#898787"
        android:src="@drawable/img_arrow_right2"
        android:scaleType="fitXY">
    </androidx.appcompat.widget.AppCompatImageView></androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>

